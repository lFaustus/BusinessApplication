<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.business.customviews.circularimageview.customTextView
                android:id="@+id/number_recurrence"
                style="@style/TextViewTheme_small"
                android:layout_width="200dp"
                android:layout_alignParentStart="true"
                android:text="No. of Recurrence: 4" />

            <com.business.customviews.circularimageview.customTextView
                android:id="@+id/date"
                style="@style/TextViewTheme_small"
                android:layout_alignParentEnd="true"
                android:text="01-01-15" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/process_name"
                    style="@style/TextViewTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Process Name Value" />

                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/process_name_label"
                    style="@style/TextViewTheme_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Process Name"

                    />

                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/schedule_type"
                    style="@style/TextViewTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Schedule Type" />

                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/schedule_type_label"
                    style="@style/TextViewTheme_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Schedule Type" />


                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/recurrence"
                    style="@style/TextViewTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Recurrence" />

                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/recurrence_label"
                    style="@style/TextViewTheme_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="recurrence" />

                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/downloaded_from"
                    style="@style/TextViewTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Downloaded Item" />

                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/downloaded_from_label"
                    style="@style/TextViewTheme_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Source" />

                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/date_modified"
                    style="@style/TextViewTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Date Modified" />

                <com.business.customviews.circularimageview.customTextView
                    android:id="@+id/date_modified_label"
                    style="@style/TextViewTheme_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Date Modified" />
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/buttonPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/card_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:background="@color/material_gray" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/card_divider"
                android:layout_marginRight="10dp"
                android:background="@drawable/delete_button"
                android:text="Delete"
                android:textColor="@color/red_button_textcolor_selector"
                android:textSize="13sp" />

            <Button
                android:id="@+id/update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_divider"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/delete_button"
                android:background="@drawable/update_button"
                android:text="Edit"
                android:textColor="@color/orange_button_textcolor_selector"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>